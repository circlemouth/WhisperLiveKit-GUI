<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="avalonia_ui.DiarizationSettingsWindow"
        x:CompileBindings="False"
        Width="520" Height="220" Title="Diarization Settings">
  <Grid Margin="10" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="6" RowSpacing="6">
    <TextBlock Grid.ColumnSpan="2" Text="Diarization options"/>
    <TextBlock Grid.Row="1" Text="Backend"/>
    <ComboBox x:Name="Backend" Grid.Row="1" Grid.Column="1">
      <ComboBoxItem Content="sortformer"/>
      <ComboBoxItem Content="diart"/>
    </ComboBox>
    <TextBlock Grid.Row="2" Text="Segmentation model"/>
    <TextBox x:Name="Segmentation" Grid.Row="2" Grid.Column="1"/>
    <TextBlock Grid.Row="3" Text="Embedding model"/>
    <TextBox x:Name="Embedding" Grid.Row="3" Grid.Column="1"/>
    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
      <Button Content="Cancel" IsCancel="True"/>
      <Button Content="OK" IsDefault="True" Click="OnOk"/>
    </StackPanel>
  </Grid>
</Window>

