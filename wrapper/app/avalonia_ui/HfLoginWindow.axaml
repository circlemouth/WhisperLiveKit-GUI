<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="avalonia_ui.HfLoginWindow"
        Width="420" Height="160"
        Title="Hugging Face Login">
  <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="10" ColumnSpacing="6" RowSpacing="8">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Enter Hugging Face access token (hf_...)" />
    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Token"/>
    <TextBox x:Name="TokenBox" Grid.Row="1" Grid.Column="1"/>
    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
      <Button Content="Cancel" IsCancel="True"/>
      <Button Content="Login" IsDefault="True" Click="OnLoginClick"/>
    </StackPanel>
  </Grid>
</Window>

