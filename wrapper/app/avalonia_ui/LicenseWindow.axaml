<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="avalonia_ui.LicenseWindow"
        Title="Licenses" Width="600" Height="400">
    <Grid RowDefinitions="Auto,*" Margin="10">
        <ComboBox x:Name="PackageCombo" SelectionChanged="OnSelect"/>
        <TextBox x:Name="LicenseText" Grid.Row="1" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
